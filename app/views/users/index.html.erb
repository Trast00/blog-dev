<!DOCTYPE html>
<html>
  <head>
    <title>Blog Dev Home</title>
    <%= stylesheet_link_tag "index" %>
    <%= stylesheet_link_tag "user" %>
  </head>

  <body>
    <% if user_signed_in? %>
      <p>You are already signed in</p>
    <% else %>
      <p>You are not signed in</p>
    <% end %>
    <ul class="column no-style list-post">
      <% @users.each do |user| %>
        <li class="max-width">
          <a href=<%= "/users/#{user.id}" %> class="row wrap no-style max-width">
            <%= render partial: "shared/user", locals: { user: user } %>
          </a>
        </li>
      <% end %>
    </ul>
  </body>
</html>
